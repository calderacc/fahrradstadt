{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 offset-3 text-center">
                <h2>
                    Interner Server-Fehler
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 text-center">
                <p class="lead">
                    Das hat nicht funktioniert.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 text-center">
                <p>
                    Fehlermeldung dieses Aufrufs:
                </p>

                <pre>{{ exception.message }}</pre>
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 text-center">
                <pre>{{ exception.trace|join('') }}</pre>
            </div>
        </div>
    </div>
{% endblock %}