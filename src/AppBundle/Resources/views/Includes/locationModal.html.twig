{% if is_granted('ROLE_USER') %}
<div class="modal fade" id="location-modal" tabindex="-1" role="dialog" aria-labelledby="location-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="location-form" action="" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="location-modal-label">
                        Foto verorten
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div id="location-map" style="height: 50vh;">

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 form-group">
                            <label for="location-input">
                                Aufnahmeort:
                            </label>
                            <input type="text" name="photo_locate[location]" id="photo-location-input" class="form-control" />
                            <input type="hidden" name="photo_locate[latitude]" id="photo-latitude-input" />
                            <input type="hidden" name="photo_locate[longitude]" id="photo-longitude-input" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Abbrechen
                        </button>

                        <button type="submit" class="btn btn-primary">
                            Speichern
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endif %}
