<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Fahrradstadt Hamburg</title>

        <link rel="stylesheet" href="{{ asset('bundles/app/css/fahrradstadt.css') }}"/>
    </head>

    <body>
        <div class="container">
            <div class="row mt-3">
                <div class="col-xs-12 text-xs-center">
                    <a href="{{ path('frontpage') }}">
                        <img src="{{ asset('bundles/app/images/logo/logo-300.png') }}" alt="Logo Fahrradstadt Hamburg" />
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-10 offset-md-1">
                    {% for photo in photoList %}
                    <div class="row mt-3">
                        <div class="col-xs-12">
                            <div class="card mb-3">
                                <img class="card-img-top img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('standard') }}" alt="Card image cap">
                                <div class="card-block">
                                    <a href="{{ path('show_photo', { photoId: photo.id }) }}">
                                        <h4 class="card-title">
                                            {{ photo.title }}
                                        </h4>
                                    </a>

                                    <p class="card-text">
                                        {{ photo.description }}
                                    </p>

                                    <p class="card-text">
                                        <small class="text-muted">
                                            hinzugef√ºgt am {{ photo.dateTime|date('d.m.Y') }} um {{ photo.dateTime|date('H:i') }} Uhr von {{ photo.user.username }}
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <script src="{{ asset('bundles/app/js/jquery/jquery-3.1.1.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/bootstrap/bootstrap.min.js') }}"></script>

    </body>
</html>
