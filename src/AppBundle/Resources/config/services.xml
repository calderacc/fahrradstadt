<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="./services/admin.xml"/>
        <import resource="./services/twig.xml"/>
        <import resource="./services/widget.xml"/>
    </imports>

    <services>
        <service id="app.photo_uploader" class="AppBundle\PhotoUploader\PhotoUploader" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="vich_uploader.templating.helper.uploader_helper" />
            <argument type="string">%kernel.root_dir%</argument>
            <argument type="service" id="mailer" />
            <argument type="service" id="session" />
        </service>

        <service id="app.login_listener" class="AppBundle\EventListener\RequestListener" public="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="app.seo_page" />
            <argument type="service" id="session" />
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>

        <service id="app.markdown" class="AppBundle\Markdown\FahrradstadtMarkdown" />

        <service id="app.seo_page" class="AppBundle\Seo\SeoPage">
            <argument type="service" id="sonata.seo.page.default" />
            <argument type="service" id="vich_uploader.templating.helper.uploader_helper" />
            <argument type="service" id="liip_imagine.cache.manager" />
        </service>
    </services>
</container>
